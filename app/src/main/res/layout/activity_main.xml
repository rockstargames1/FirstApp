<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:weightSum="1">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:gravity="center"
        android:text="dec"
        android:id="@+id/decrement"
        android:clickable="true"
        android:background="#0033ff"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/hideShowTextView"
        android:layout_toStartOf="@+id/hideShowTextView"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/hideShowTextView"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/increment"
        android:text="INC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0033ff"
        android:layout_alignTop="@+id/decrement"
        android:layout_toRightOf="@+id/decrement"
        android:layout_toEndOf="@+id/decrement"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:background="#0033ff"
        android:id="@+id/newGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp" />


</RelativeLayout>
